{% extends 'App::base.html.twig' %}


{% block body %}
    <h1 class="g-unit card card--padded linebox linebox--{{ line.key }}">{{ line.name }} Line</h1>
    <div class="g-unit card card--padded">
        {% if line.isDisrupted %}
            <h2 class="g-unit">{{ line.status }}</h2>
            <p>{{ line.status }}</p>
        {% else %}
            <h2>{{ line.status }}</h2>
        {% endif %}
    </div>
    <div class="g-unit card card--padded">
        <h2 class="g-unit">Notifications</h2>
        <p>Your browser does not support notifcations. <a href="/settings#notifications">More info</a></p>
    </div>
    <div class="g-unit card card--padded">
        <h2 class="g-unit">Service History</h2>
        <p>There have been <strong>32</strong> disruptions in the last 60 days</p>
    </div>
{% endblock %}
