<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Securities</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/static/css/global.css" />
</head>
<body class="{% block bodyClass %}{% endblock %}">
{% block header %}
<div class="app">
    <header class="header">
        <div class="page-limit">
            <div id="masthead-content" class="header__content {%if not showMasthead %}transparent{% endif%}">
            <div class="header__logo">
                <a href="{{ path('home') }}">ISIN Analytics</a>
            </div>
            <div id="search-container" class="header__search">{%
                if showMasthead %}{% include '@partials/search.html.twig' %}{% endif
            %}</div>
            </div>
        </div>
    </header>
    <main class="main">
        <div class="page-limit" id="main-body">
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
        </div>
    </main>
    <footer class="footer">
        <div class="page-limit">
            &copy; {{ currentYear }}
        </div>
    </footer>
</div>
{% endblock %}
<template id="loading-spinner" class="hidden">
    <div class="loading">
        <svg class="loading__spinner" viewBox="-2 -2 70 70" xmlns="http://www.w3.org/2000/svg">
            <circle class="loading__path" fill="none" stroke-width="8" cx="33" cy="33" r="30"></circle>
        </svg>
    </div>
</template>
<script src="/static/js/bootstrap.js"></script>
</body>
</html>
