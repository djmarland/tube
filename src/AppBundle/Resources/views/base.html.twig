<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{ meta.fullTitle }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/static/icons/{{ meta.assetVersion }}/apple-touch-icon-180x180.png" />
    <link rel="icon" href="/static/icons/{{ meta.assetVersion }}/favicon.ico" type="image/x-icon" />
    <link rel="icon" type="image/png" href="/static/icons/{{ meta.assetVersion }}/favicon-96x96.png" sizes="96x96" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-startup-image" href="/static/icons/{{ meta.assetVersion }}/apple-touch-icon-180x180.png" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="msapplication-TileColor" content="#383b3f" />
    <meta name="msapplication-TileImage" content="/static/icons/{{ meta.assetVersion }}/mstile-144x144.png" />
    <meta name="msapplication-square150x150logo" content="/static/icons/{{ meta.assetVersion }}/mstile-150x150.png" />
    <meta name="msapplication-square310x310logo" content="/static/icons/{{ meta.assetVersion }}/mstile-310x310.png" />
    <meta name="theme-color" content="#383b3f" />
    <style>
        {{ source('@static/css/global.css') }}
    </style>
    <script>
        window.TubeAlert = {
            linedata : {{ lineData|raw }}
        }
    </script>
</head>
<body data-view="{% block bodyView %}{% endblock %}" data-pageline="{% block bodyLine %}{% endblock %}">
<svg style="display: none">
    <symbol id="icon-chevron-left" viewBox="0 0 16 24"><path d="M14.88 2.878L5.756 12l9.124 9.142-2.81 2.808L.12 12 12.07.05l2.81 2.828z"></path></symbol>
    <symbol id="icon-chevron-right" viewBox="0 0 16 24"><path d="M.12 21.122L9.244 12 .12 2.858 2.93.05 14.88 12 2.93 23.95.12 21.122z"></path></symbol>
    <symbol id="icon-settings" viewBox="0 0 24 24"><path d="M12 15.5A3.5 3.5 0 0 1 8.5 12 3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5 3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97 0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.39-1.06-.73-1.69-.98l-.37-2.65c-.04-.24-.25-.42-.5-.42h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1 0 .33.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.74 1.69.99l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.26 1.17-.59 1.69-.99l2.49 1.01c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66z"></path></symbol>
    <symbol id="icon-alert" viewBox="0 0 24 24"><path d="M13 13h-2V7h2m0 10h-2v-2h2M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10 10 10 0 0 0 10-10A10 10 0 0 0 12 2z"></path></symbol>
</svg>
{% block header %}
<div class="app">
    <div class="app__main">
        <header class="app__header header">
            <div class="header__logo">
                <a href="/" id="js-back-logo">{{ meta.siteTitle }}</a>
            </div>
            <div class="header__back">
                <a href="/" id="js-back">
                    <svg><use xlink:href="#icon-chevron-left"></use></svg>
                </a>
            </div>
            <div class="header__settings">
                <a href="/settings" id="js-settings">
                    <svg><use xlink:href="#icon-settings"></use></svg>
                </a>
            </div>
        </header>
        <div class="page" id="page">
            <main class="main">
                <div id="main-body" data-js="main-body">
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
                </div>{#
                <div id="ad" class="page-limit">
                    <div class="g-unit card card--padded">
                        <h2 class="g-unit e">Advertisment (<a href="/settings#ads">Why?</a>)</h2>
                    </div>
                </div>#}
            </main>
            <footer class="footer g-unit">
                <div class="page-limit footer__text">Built by <a href="http://rland.me.uk">David Marland</a>.
                    Feedback: <a href="http://twitter.com/djmarland">@djmarland</a></div>
            </footer>
        </div>
    </div>
    <nav class="app__nav">
        <ol class="app__nav-list list--unstyled">
            {% for line in lines %}
                <li>
                    <a data-js="linebox"
                       data-linebox="{{ line.URLkey }}"
                       data-updated="{{ line.latestStatus.updatedAtISO }}"
                       href="/{{ line.URLkey }}"
                       class="statusbox linebox linebox--{{ line.URLkey }}">
                        <div class="statusbox__name">
                            {{ line.name }}
                            <br />
                            <span data-js="linebox-summary">{{ line.statusSummary }}</span>
                        </div>
                        <div data-js="linebox-alert" class="statusbox__alert {% if not line.isDisrupted %}hidden{% endif %}">
                            <svg><use xlink:href="#icon-alert"></use></svg>
                        </div>
                        <div class="statusbox__chevron">
                            <svg><use xlink:href="#icon-chevron-right"></use></svg>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ol>
    </nav>
</div>
{% endblock %}
<template style="display:none" id="template-notify">
    <div>
        <p class="card--padded">Choose the times you wish to be notified for this line and hit save</p>
        <table class="times">
            <thead>
                <tr>
                    <th></th>
                    <th>M<span class="invisible">onday</span></th>
                    <th>T<span class="invisible">uesday</span></th>
                    <th>W<span class="invisible">ednesday</span></th>
                    <th>T<span class="invisible">hursday</span></th>
                    <th>F<span class="invisible">riday</span></th>
                    <th>S<span class="invisible">aturday</span></th>
                    <th>S<span class="invisible">unday</span></th>
                </tr>
            </thead>
            <tbody>
                {% for hour in range(5,23) %}
                    <tr>
                        <th class="times__hour">{{ hour }}</th>
                        <td>
                            <label>
                                <span class="invisible">Monday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="1-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Tuesday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="2-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Wednesday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="3-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Thursday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="4-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Friday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="5-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Saturday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="6-{{ hour }}" />
                            </label>
                        </td>
                        <td>
                            <label>
                                <span class="invisible">Sunday {{ hour }}:00</span>
                                <input class="times__box" type="checkbox" value="7-{{ hour }}" />
                            </label>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</template>
<template style="display:none" id="template-settings">
    <div>
        <div class="card--padded">
            <h2 id="notifications">Notifications</h2>
            <p>You can delete all of your subscriptions here. You will no longer receive notifications.</p>
        </div>
        <div class="card__foot">
            <p class="f">
                <button class="btn"  data-js="notifications-delete">Delete all subscriptions</button>
                <span class="card__foot-line" data-js="notifications-progress"></span>
            </p>
        </div>
    </div>
</template>
