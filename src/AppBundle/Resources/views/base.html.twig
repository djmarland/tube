<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{ meta.fullTitle }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="57x57" href="/static/icons/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon" sizes="60x60" href="/static/icons/apple-touch-icon-60x60.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="/static/icons/apple-touch-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="76x76" href="/static/icons/apple-touch-icon-76x76.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="/static/icons/apple-touch-icon-114x114.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/static/icons/apple-touch-icon-120x120.png" />
    <link rel="apple-touch-icon" sizes="144x144" href="/static/icons/apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/static/icons/apple-touch-icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/icons/apple-touch-icon-180x180.png" />
    <link rel="icon" href="/static/icons/favicon.ico" type="image/x-icon" />
    <link rel="icon" type="image/png" href="/static/icons/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/static/icons/favicon-194x194.png" sizes="194x194" />
    <link rel="icon" type="image/png" href="/static/icons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/png" href="/static/icons/android-chrome-192x192.png" sizes="192x192" />
    <link rel="icon" type="image/png" href="/static/icons/favicon-16x16.png" sizes="16x16" />
    <meta name="msapplication-TileColor" content="#383b3f" />
    <meta name="msapplication-TileImage" content="/static/icons/mstile-144x144.png" />
    <meta name="msapplication-square150x150logo" content="/static/icons/mstile-150x150.png" />
    <meta name="msapplication-square310x310logo" content="/static/icons/mstile-310x310.png" />
    <meta name="theme-color" content="#383b3f" />
    <style>
        {{ source('@static/css/global.css') }}
    </style>
</head>
<body class="{% block bodyClass %}{% endblock %}">
<svg style="display: none">
    <symbol id="icon-chevron-left" viewBox="0 0 16 24"><path d="M14.88 2.878L5.756 12l9.124 9.142-2.81 2.808L.12 12 12.07.05l2.81 2.828z"/></symbol>
    <symbol id="icon-chevron-right" viewBox="0 0 16 24"><path d="M.12 21.122L9.244 12 .12 2.858 2.93.05 14.88 12 2.93 23.95.12 21.122z"/></symbol>
    <symbol id="icon-settings" viewBox="0 0 24 24"><path d="M12 15.5A3.5 3.5 0 0 1 8.5 12 3.5 3.5 0 0 1 12 8.5a3.5 3.5 0 0 1 3.5 3.5 3.5 3.5 0 0 1-3.5 3.5m7.43-2.53c.04-.32.07-.64.07-.97 0-.33-.03-.66-.07-1l2.11-1.63c.19-.15.24-.42.12-.64l-2-3.46c-.12-.22-.39-.31-.61-.22l-2.49 1c-.52-.39-1.06-.73-1.69-.98l-.37-2.65c-.04-.24-.25-.42-.5-.42h-4c-.25 0-.46.18-.5.42l-.37 2.65c-.63.25-1.17.59-1.69.98l-2.49-1c-.22-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64L4.57 11c-.04.34-.07.67-.07 1 0 .33.03.65.07.97l-2.11 1.66c-.19.15-.25.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1.01c.52.4 1.06.74 1.69.99l.37 2.65c.04.24.25.42.5.42h4c.25 0 .46-.18.5-.42l.37-2.65c.63-.26 1.17-.59 1.69-.99l2.49 1.01c.22.08.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.66z"/></symbol>
    <symbol id="icon-alert" viewBox="0 0 24 24"><path d="M13 13h-2V7h2m0 10h-2v-2h2M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10 10 10 0 0 0 10-10A10 10 0 0 0 12 2z"/></symbol>
</svg>
{% block header %}
<div class="app">
    <div class="app__main">
        <header class="app__header header">
            <div class="header__logo">
                <a href="/" id="js-back-logo">{{ meta.siteTitle }}</a>
            </div>
            <div class="header__back">
                <a href="/" id="js-back" class="hidden">
                    <svg><use xlink:href="#icon-chevron-left" /></svg>
                </a>
            </div>
            <div class="header__settings">
                <a href="/settings" id="js-settings">
                    <svg><use xlink:href="#icon-settings" /></svg>
                </a>
            </div>
        </header>
        <div id="page">
            <main class="main">
                <div id="main-body" class="page-limit">
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
                </div>
                <!--<div id="ad" class="page-limit">
                    <div class="g-unit card card--padded">
                        <h2 class="g-unit e">Advertisment (<a href="/settings#ads">Why?</a>)</h2>
                    </div>
                </div>-->
            </main>
            <footer class="footer g-unit">
                <div class="page-limit footer__text">Built by <a href="http://rland.me.uk">David Marland</a>.
                    Feedback: <a href="http://twitter.com/djmarland">@djmarland</a></div>
            </footer>
        </div>
    </div>
    <nav class="app__nav">
        <ol class="app__nav-list list--unstyled">
            {% for line in lines %}
                <li>
                    <a href="/{{ line.URLkey }}" class="statusbox linebox linebox--{{ line.URLkey }}">
                        <div class="statusbox__name">
                            {{ line.name }}
                            <br />
                            {{ line.statusSummary }}
                        </div>
                        {% if line.isDisrupted %}
                            <div class="statusbox__alert">
                                <svg><use xlink:href="#icon-alert" /></svg>
                            </div>
                        {% endif %}
                        <div class="statusbox__chevron">
                            <svg><use xlink:href="#icon-chevron-right" /></svg>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ol>
    </nav>
</div>
{% endblock %}
<script>
    {{ source('@static/js/bootstrap.js') }}
</script>
</body>
</html>
